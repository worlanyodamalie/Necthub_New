    <div class="col-lg-10">
        <h2>Events</h2>
        <ol class="breadcrumb">
            <li>
                <a href="">Home</a>
        </li>
        <li class="active">
            <strong>Events</strong>
        </li>
    </ol>
</div>
<div class="col-lg-2">

</div>
        </div>
<div class="wrapper wrapper-content">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="row">
                    <div class="col-lg-6" align="center">
                        <h2>Create new event</h2>
                    </div>
                    <div class="col-lg-6" align="center">
                        <%#<a href="" class="btn btn-primary">New Event</a>%>
                        <%= link_to "New Event" ,new_event_path , :class => "btn btn-primary"  %>
                    </div>
                </div>

                </div>

            <div class="ibox-content text-center css-animation-box"><!-- Copy -->
                <br /><br />
                <h1 class="text-navy">Your Events</h1>
                <br /><br />



                <div class="row">
        <% @events.each do |event| %>
        <div class="col-lg-4">
            <div class="ibox" style="border: 1px solid #f1e4e4; padding: 0px;">
                <div class="ibox-title">
                    <h5><%=event.try(:event_name)%></h5>
                </div>
                <div class="ibox-content">
                    <div><!-- Image here -->
                        <%= image_tag event.event_pic.nthumb.url if event.event_pic? %>
                    </div>
                    <br />
                    <h4>Info</h4>
                    <p>
                        <%= event.try(:event_type)%>
                    </p>
                    <br />

                </div>
            </div>
        </div>
         <% end %>
    </div>

            </div>
            </div>
        </div>
    </div>

</div>

